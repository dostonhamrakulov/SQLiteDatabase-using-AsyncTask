<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.idoston.adaptivesystem">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity_0"
            android:label="AUS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:label="AUS"
            android:parentActivityName=".MainActivity_0">
            <intent-filter>
                <action android:name="com.idoston.adaptivesystem.MainActivity" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Inserting"
            android:label="New University"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.adaptivesystem.Inserting" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Displaying"
            android:label="All universities"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.adaptivesystem.Displaying" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Adaptive"
            android:label="Adaptation"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.adaptivesystem.Adaptive" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Adaptive_display"
            android:label="Result section"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="com.idoston.adaptivesystem.Adaptive_display" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>