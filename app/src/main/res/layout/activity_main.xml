<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.idoston.adaptivesystem.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Please, select what you want to do"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:id="@+id/welcome"
            android:textSize="20dp"
            android:textStyle="italic"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/button"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:text="Insert university"
            android:onClick="MoveInsert"
            android:textAllCaps="false"
            android:id="@+id/btn_moveInsert"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="40dp"
            android:background="@color/button"
            android:layout_marginLeft="40dp"
            android:text="View all universities"
            android:onClick="MoveView"
            android:id="@+id/btn_moveSearch"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:background="@color/button"
            android:layout_marginLeft="40dp"
            android:text="Search University"
            android:textAllCaps="false"
            android:onClick="MoveAdaptive"
            android:id="@+id/btn_search"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp"
        android:onClick="getInstruction"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:text="Get information" />


</RelativeLayout>
